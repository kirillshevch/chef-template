      "password": {
        "postgres": "$1$CU63hQbB$r7Ixz58Q4vbgnwgf003fi."

      },
      "users": [
        {
          "username": "deployer",
          "password": "$1$ut5HY53S$yMVOzameTGPNrlg1w7dsv.",
          "superuser": true,
          "replication": false,
          "createdb": true,
          "createrole": false,
          "inherit": true,
          "replication": false,
          "login": true
        }
      ]
    },
    "firewall": {
      "rules": [
        {
          "http": {
            "port": "80",
            "protocol": "tcp"
          },
          "https": {
            "port": "443",
