    "recipe[openssh]",
    "recipe[firewall::default]",
    "recipe[ufw]",
    "recipe[nginx::source]",
    "recipe[postgresql::client]",
    "recipe[postgresql::server]",
    "recipe[postgresql::setup_users]",
    "recipe[rvm::user]",
    "recipe[nodejs]",
    "recipe[apt-packages]",
    "recipe[monit]",
    "recipe[redisio]",
    "recipe[redisio::enable]",
    "recipe[ncdu]",
    "recipe[swap_tuning]"
